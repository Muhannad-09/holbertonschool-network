#!/usr/bin/env bash
# Script that changes localhost and facebook.com IPs in /etc/hosts
# Backup the original /etc/hosts
cp /etc/hosts /etc/hosts.bak

# Replace localhost with 127.0.0.2
sed -i 's/127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts

# Replace or add facebook.com with 8.8.8.8
if grep -q "facebook.com" /etc/hosts; then
    sed -i 's/.*facebook.com/8.8.8.8 facebook.com/' /etc/hosts
else
    echo "8.8.8.8 facebook.com" >> /etc/hosts
fi
